{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "lib": ["ES2020", "DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/"],
  "exclude": ["node_modules", "lib"]
}
